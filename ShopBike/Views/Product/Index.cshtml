@model Models.EF.Product
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var mainPic = ViewData["MainPic"] as Models.EF.Image;
    var partialPics = ViewData["PartialPics"] as List<Models.EF.Image>;
}
<div class="overlay-content" style="padding-left: 0px">
    <div class="products">
        <div class="products__infor">
            <div class="products__infor-image">
                <img src="@mainPic.Link" alt="" class="product__infor-img">
            </div>
            <div class="products__infor-base">
                <p>@Model.Name</p>
                <div class="products__infor-price">
                    <p>Giá khuyễn mãi: @Html.Raw(@String.Format("{0:#,##0}", @Model.Price)) VNĐ</p>
                    <button type="button">Mua</button>
                    <button type="button">Thêm vào giỏ hàng</button>
                </div>
            </div>
        </div>
        <div class="products__detail">
            @if (partialPics != null)
            {
                <ul>
                    @foreach (var image in partialPics)
                    {
                        <li>
                            <img src="@image.Link" alt="">
                        </li>
                    }
                </ul>
            }
            <h4>Mô tả chi tiết sản phẩm</h4>
            <p style="font-size: 18px">@Model.Description</p>
        </div>
    </div>
</div>
@section Css{
    <link rel="stylesheet" href="~/Assets/Client/css/detail.css">
}